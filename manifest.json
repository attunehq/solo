{
  "display_information": {
      "name": "Attune",
      "description": "AI assistant for engineering managers",
      "background_color": "#115e59"
  },
  "features": {
      "app_home": {
          "home_tab_enabled": true,
          "messages_tab_enabled": false,
          "messages_tab_read_only_enabled": false
      },
      "bot_user": {
          "display_name": "Attune",
          "always_online": true
      }
  },
  "oauth_config": {
      "redirect_urls": [
          "https://app.attunehq.com/api/slack/oauth"
      ],
      "scopes": {
          "user": [
              "channels:history",
              "channels:read"
          ],
          "bot": [
              "im:history",
              "chat:write"
          ]
      }
  },
  "settings": {
      "event_subscriptions": {
          "bot_events": [
              "message.im"
          ]
      },
      "interactivity": {
          "is_enabled": true
      },
      "org_deploy_enabled": false,
      "socket_mode_enabled": true,
      "token_rotation_enabled": false
  }
}
